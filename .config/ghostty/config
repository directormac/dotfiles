keybind = ctrl+minus=decrease_font_size:2
keybind = ctrl+zero=reset_font_size


keybind = ctrl+grave_accent>backslash=new_split:right
keybind = ctrl+grave_accent>minus=new_split:down

keybind = ctrl+grave_accent>j=goto_split:bottom
keybind = ctrl+grave_accent>k=goto_split:top
keybind = ctrl+grave_accent>h=goto_split:left
keybind = ctrl+grave_accent>l=goto_split:right

keybind = cmd+grave_accent>z=toggle_split_zoom
